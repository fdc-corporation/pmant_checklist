<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pmant_checklist_tree" model="ir.ui.view">
        <field name="name">pmant.checklist.tree</field>
        <field name="model">pmant.checklist</field>
        <field name="arch" type="xml">
            <tree string="Checklists de Mantenimiento">
                <field name="name"/>
                <field name="creado_por"/>
                <field name="fecha_creacion"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pmant_checklist_form" model="ir.ui.view">
        <field name="name">pmant.checklist.form</field>
        <field name="model">pmant.checklist</field>
        <field name="arch" type="xml">
            <form string="Checklist de Mantenimiento">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="creado_por" readonly="1"/>
                        <field name="fecha_creacion" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Preguntas del Checklist">
                            <field name="line_questions">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="tipo_respuesta"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pmant_checklist" model="ir.actions.act_window">
        <field name="name">Checklist de Mantenimiento</field>
        <field name="res_model">pmant.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Crea y administra listas de verificaciÃ³n para los mantenimientos.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_pmant_checklist" name="Plantillas de Checklist" parent="maintenance.menu_maintenance_configuration" action="action_pmant_checklist"/>
</odoo>
